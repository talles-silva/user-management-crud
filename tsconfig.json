{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
          }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
      ]
}